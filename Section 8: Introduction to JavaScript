// CONDITIONALS
// 1 - IF
// 2 - ELSE IF
// 3 - ELSE







// WHILE LOOPS

// contando de 1 a 5

var count = 1;

while (count < 6){
	console.log ("count is: " + count);
	count++;
}

// contando de 5 a 20

var count = 5;

while (count <= 20){
	console.log ("count is: " + count);
	count++;}

// contando de 5 a 20, de 2 em 2 

var count = 5;

while (count <= 20){
	console.log ("count is: " + count);
	count+=2;}



var str = "hello"
var count = 0;
while (count , str.lenght) {
console.log (str[count]);
count++;}



// 1. Print all numbers between -10 abd 19

var count = -10;

while (count < 20){
	console.log (count)
	count++;
}

// 2. Print all even numbers between 10 and 40

var count = 10;

while (count <= 40){
	console.log (count)
	count+=2;
}

or 

var count = 10;

while (count <= 40){
	if (count % 2 === 0){
		console.log (count)
	}
	count+=1;
}

// 3. Print all odd numbers between 300 and 333

var count = 300;

while (count <= 333){
	if (count % 2 !== 0){
		console.log (count)
	}
	count+=1;
}


// Print all numbers divisible by 5 AND 3 between 5 and50

var count = 5;

while (count <= 50){
	if (count % 5 === 0 && count % 3 === 0){
		console.log (count)
	}
	count+=1;
}



