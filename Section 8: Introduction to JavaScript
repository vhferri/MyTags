// 2. Strings
// 2.1 Single and double quotes

// "hello world"
// 'hello world'

// 2.2 Concatenations
// "hello " + "there" = "hello there"

// 2.3 Escape characters start with "\"
// "She said \"good bye\"" = "She said "good bye""

// "To see a backslash: \\" = "To see a backslash: \"

// 2.4 Strings have a length property
// "hello world".length = 11

// 2.5 Access individual characters using [] and an index
// "hello" [0] = "h"
// "hello" [4] = "o"


// 3. Booleans
// True or false

// 4. Null
// Nothing there

// 5. Undefined
